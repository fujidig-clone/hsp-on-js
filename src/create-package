#!/usr/bin/env ruby1.9
require 'optparse'

out_path = 'hsp-on-js-core.js'
out_enc = 'utf-8'

opt = OptionParser.new
opt.on('-o PATH', 'output file path') {|v| out_path = v}
opt.on('-e ENCODING', 'output file encoding') {|v| out_enc = v}

opt.parse!(ARGV)

filenames = %w[
head.js
binary-parser.js
cp932.js
utils.js
vcrandom.js
formatter.js
exception.js
axdata.js
instruction.js
user-def-func.js
builtin-func-names.js
builtin-funcs.js
vartype.js
value.js
label.js
str-value.js
double-value.js
int-value.js
struct-value.js
jump-type.js
str-buffer.js
hsp-array.js
reference.js
uninitialized-array.js
label-array.js
str-array.js
double-array.js
int-array.js
struct-array.js
variable.js
variable-agent.js
param-info.js
calc-code.js
compiler.js
evaluator.js
foot.js
]

buf = ""
basedir = File.dirname($0)
filenames.each do |filename|
  open(File.join(basedir, filename), 'rb:utf-8') {|f| buf << f.read }
end

open(out_path,'wb:'+out_enc) {|f| f.puts buf }

